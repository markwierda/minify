<Window x:Class="mini_spotify.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mini_spotify.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="180,90,0,0" VerticalAlignment="Top" Width="85"/>
        <TextBox Name="tBox_Username" HorizontalAlignment="Left" Margin="180,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="180,151,0,0" VerticalAlignment="Top" Width="71"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="180,234,0,0" VerticalAlignment="Top" Width="85" Height="25" Click="Login_Button_Click"/>
        <Label Content="Not registered? Make an account!" HorizontalAlignment="Left" Margin="180,283,0,0" VerticalAlignment="Top" Width="185"/>
        <Button Content="Create account" HorizontalAlignment="Left" Margin="180,314,0,0" VerticalAlignment="Top" Width="135" Height="25" Click="Create_Account_Button_click"/>
        <PasswordBox Name="tBox_Password" HorizontalAlignment="Left" Margin="180,182,0,0" VerticalAlignment="Top" Width="120" Height="25"/>

    </Grid>
</Window>
